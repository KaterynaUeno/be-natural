<div class='container mt-8'>
  <div class='newspaper-bordered'>
    <h2>OUR FARMS</h2>
    <div class="farms-container">
      <% @farms.each do |farm| %>
        <%= link_to farm_path(farm) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path farm.photo.key, height: 800, crop: :fill %>')">
            <h2> <%= farm.name %> </h2>
            <div class="farm-category">
              <p> <%= farm.products[0].category.name %>, <%= farm.products[-1].category.name %> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="container">
  <div class="subheader-map">
    <h2>Our locations:</h2>
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
