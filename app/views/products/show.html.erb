  <div class='newspaper-bordered'>
    <header></header>
    <div class="products-container">

      <div class="container-form justify-content-center">
        <header>Product Info</header>
        <%= cl_image_tag @product.photo.key, height: 1000, width: 800, crop: :fill %>
          <h2><%= @product.name %>: Â£<%= sprintf('%.2f', @product.price.round(2)) %></h2>
