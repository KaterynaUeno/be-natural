                <%= f.input :name %>
              </div>
              <div class="container03 justify-content-center">
                <%= f.input :price %>
              </div>
              <%# <%= f.input :category, collection: @categories, placeholder: @product.category.name %>
              <div class="container03 justify-content-center">
                <%= f.input :description %>
              </div>
              <div class="container03 justify-content-center">
